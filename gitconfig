[alias]
  aa = add --all
  amend = commit --amend
  cmv = commit -v
  cmva = !git add --all && git commit -v
  discard = checkout --
  lg = log -p --color-words
  lgg = log --oneline --graph
  st = status
[color]
  ui = true
[color "diff"]
  ; see 'git help config' /color.diff.<slot> for more options
  frag = magenta bold
  meta = cyan
[commit]
  verbose = true
[core]
  # true:  Convert remote LF into local CRLF, and local CRLF into remote LF.
  # false: Local line endings stay as-is from remote.
  # input: Convert remote CRLF into local LF.
  autocrlf = {{autocrlf}}
  editor = vim
[init]
  defaultBranch = master
[merge]
  tool = vimdiff
[pull]
  ff = only
[push]
  autoSetupRemote = true
  default = current
[user]
  email = {{user.email}}
  name = {{user.name}}
