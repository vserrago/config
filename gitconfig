[color]
	ui = true
[color "diff"]
	; see 'git help config' /color.diff.<slot> for more options
	meta = cyan
	frag = magenta bold
[core]
	editor = vim
[merge]
	tool = vimdiff
[alias]
	adal = add --all
	amend = commit --amend
	clearall = !git clean -df && git checkout -- .
	cmv = commit -v
	cmva = !git add --all && git commit -v
	discard = checkout -- 
	lg = log -p --color-words
	lgg = log --oneline --graph
	st = status
	pullom = pull origin master
	pushom = push origin master
	unstage = reset HEAD
[branch "master"]
	remote = origin
	merge = refs/heads/master
