[alias]
  adal = add --all
  amend = commit --amend
  cmv = commit -v
  cmva = !git add --all && git commit -v
  discard = checkout --
  lg = log -p --color-words
  lgg = log --oneline --graph
  st = status
  unstage = reset HEAD
[color]
  ui = true
[color "diff"]
  ; see 'git help config' /color.diff.<slot> for more options
  frag = magenta bold
  meta = cyan
[commit]
  verbose = true
[core]
  editor = vim
[init]
  defaultBranch = master
[merge]
  tool = vimdiff
[pull]
  ff = only
[push]
  default = current
